= t("user.vote.similarly") if (users_array.length != 0)
-users_array.each do |user|
  .compared_user{ "data-id" => user[:user_id]}
    .photo
      = link_to(image_tag(user[:gravatar]), compare_taste_path(user[:user_id]))
    .login
      = link_to(user[:user], compare_taste_path(user[:user_id]))
      %br
      %span
        = t("user.vote.rated_with") 
        = user[:rating]
    .add_followed_user
      -if not_follwed_user?(user[:user_id])
        %button{:title => "#{(t'user.add_follower')}"}=image_tag("/images/add.png", :height => 10, :width => 10) 
    .comparison
      = "#{t('user.compared_user.compability')}"
      .tastemeter
        %span{:style => "width: #{user[:comparison_value]}%"}
      .percent 
        =" #{user[:comparison_value]}%"  

