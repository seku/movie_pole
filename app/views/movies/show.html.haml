.link_comunication
  = link_to(t('txt.main'), genres_path) 
  >> 
  %span= @movie.title
%br
#yui-main
  .yui-b
    .yui-g
      .movie_details
        = link_to(@movie.title, movie_path(@movie), :class => "title") 
        .rating
          = t('sort.rating')
          = @movie.rating 
        .torrents
          -if @movie.torrents.any? 
            torrents: 
            -@movie.torrents.each do |torrent| 
              = link_to("torrent (#{number_to_human_size(torrent.size)})", torrent_url(torrent), :title => torrent.title)
          -else 
            = t("txt.no_torrent")
            .add_to_your_list
              -if @movie.torrents.blank?
                -if !current_user
                  #redirect_login
                    = link_to(t("user.add_movie"), new_user_session_path)
                -else
                  #add_movie
                    = link_to(t("user.add_movie"), edit_desirable_alert_path(@movie))
        .subtitles 
          = link_to(t('subtitles.foreign'), subtitles_url(cookies[:locale], "#{@movie.imdb_id}")) if cookies[:locale] != "en"
          = link_to(t('subtitles.english'), subtitles_url("eng", "#{@movie.imdb_id}")) 
        .year
          = t('txt.year') 
          = @movie.year 
        .directors
          = t('txt.directors') 
          = @movie.directors 
        .imdb
          Imdb:
          = link_to(@movie.imdb_id, imdb_url(@movie.imdb_id))
        .writers
          = t('txt.writers')
          = @movie.writers
        .trailers
          = link_to(t('txt.trailers'), @movie.official_site) if @movie.official_site
        .release_date
          = t('txt.release_date') 
          = @movie.release_date 
        .genre
          = t('txt.genre') 
          -@movie.genres.each do |genre|
            = link_to(t("genres.#{genre.name}"), genre_movies_path(genre)) unless genre.id == 29

        .plot
          = t('txt.plot')
          = @movie.plot 
.yui-b#side_panel
  = render :partial => "movies/side_panel" 


