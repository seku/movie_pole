%h1
  Listing users

%table
  %tr
    %th
      User

  -if @users
    -for user in @users 
      %tr
        %td
          =h user.login 
        -if user.photo 
          %td
            = image_tag user.photo.url(:thumb) 
        %td
          = link_to 'Show', user 
        %td
          = link_to 'Edit', edit_user_path(user) 
        %td
          = link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete 

%br 
= link_to 'New user', new_user_path 

